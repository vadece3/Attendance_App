<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="118dp"
        android:layout_height="match_parent"
        card_view:srcCompat="@drawable/add_student"
        android:id="@+id/SmallimageView" />

    <android.support.v7.widget.CardView

        android:orientation="horizontal"
        android:id="@+id/card_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="4dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="@color/main_back">

            <TextView
                android:id="@+id/student_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suchandrim Sarkar"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/student_item_roll"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13000112160"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="3dp"
                android:layout_above="@+id/student_item_phone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/student_item_phone"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M: 9775301737"
                android:textSize="13sp"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="left" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>